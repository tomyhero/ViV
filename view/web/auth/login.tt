[% INCLUDE header.inc %]
[% IF form.has_error %]
<div id="fvl">
<ul>
    <li>Login Error</li>
</ul>
</div>
[% END %]
<form method="post" action="/auth/login/">
<table>
<tr>
    <th>ログイン名</th>
    <td><input type="text" name="login_name"></td>
</tr>
<tr>
    <th>パスワード</th>
    <td><input type="password" name="password"></td>
</tr>
<tr>
    <td align="right" colspan="2"><input type="submit" value="login" /></td>
</tr>
</table>
</form>
[% INCLUDE footer.inc %]
